{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<style>
.auth-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.auth-container {
    width: 100%;
    max-width: 1200px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: #242424;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.auth-visual {
    background: linear-gradient(135deg, rgba(255, 0, 0, 0.9), rgba(255, 0, 0, 0.7)),
                url('/tigergym/assets/images/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    padding: 4rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.auth-visual::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/tigergym/assets/images/pattern.png');
    opacity: 0.1;
}

.auth-visual-content {
    position: relative;
    z-index: 1;
}

.auth-visual h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.2;
}

.auth-visual p {
    font-size: 1.8rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
}

.auth-form-container {
    padding: 4rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.auth-nav {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.auth-nav-btn {
    font-size: 1.6rem;
    padding: 1.2rem 2.5rem;
    background: transparent;
    border: 2px solid #ff0000;
    border-radius: 30px;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.auth-nav-btn i {
    font-size: 1.6rem;
    transition: all 0.3s ease;
}

.auth-nav-btn:hover,
.auth-nav-btn.active {
    background: #ff0000;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(255, 0, 0, 0.3);
}

.auth-form {
    max-width: 400px;
    margin: 0 auto;
    width: 100%;
}

.form-group {
    margin-bottom: 2rem;
}

.form-group label {
    display: block;
    font-size: 1.5rem;
    color: white;
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.form-group label i {
    color: #ff0000;
    font-size: 1.6rem;
}

.form-group input {
    width: 100%;
    padding: 1.5rem;
    background: #1a1a1a;
    border: 2px solid #333;
    border-radius: 10px;
    color: white;
    font-size: 1.5rem;
    transition: all 0.3s ease;
}

.form-group input:focus {
    border-color: #ff0000;
    outline: none;
    box-shadow: 0 0 0 3px rgba(255, 0, 0, 0.1);
}

.form-group input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.alert {
    background: rgba(255, 0, 0, 0.1);
    border-left: 4px solid #ff0000;
    padding: 1.5rem;
    border-radius: 10px;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    animation: slideIn 0.5s ease-out;
}

.alert i {
    font-size: 2rem;
    color: #ff0000;
}

.alert-text {
    font-size: 1.5rem;
    color: #ff0000;
    font-weight: 500;
}

.submit-btn {
    width: 100%;
    padding: 1.5rem;
    background: #ff0000;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 1.6rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
}

.submit-btn i {
    font-size: 1.8rem;
}

.submit-btn:hover {
    background: #cc0000;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 0, 0, 0.3);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media (max-width: 1200px) {
    .auth-container {
        grid-template-columns: 1fr;
        max-width: 600px;
    }
    
    .auth-visual {
        padding: 3rem 2rem;
        text-align: center;
    }
    
    .auth-form-container {
        padding: 3rem 2rem;
    }
}

@media (max-width: 768px) {
    .auth-visual h1 {
        font-size: 2.8rem;
    }
    
    .auth-visual p {
        font-size: 1.5rem;
    }
    
    .auth-nav {
        flex-direction: column;
    }
    
    .form-group input,
    .submit-btn {
        padding: 1.2rem;
        font-size: 1.4rem;
    }
}
</style>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-visual">
            <div class="auth-visual-content">
                <h1>{{ h1 }}</h1>
                <p>Rejoignez la communauté TigerGym et accédez à votre espace personnel pour découvrir notre sélection exclusive de matériel sportif.</p>
            </div>
        </div>
        
        <div class="auth-form-container">
            <div class="auth-nav">
                <a href="/tigergym/inscription" class="auth-nav-btn">
                    <i class="fas fa-user-plus"></i>
                    Inscription
                </a>
                <button class="auth-nav-btn active">
                    <i class="fas fa-sign-in-alt"></i>
                    Connexion
                </button>
            </div>

            {% if error %}
                <div class="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <span class="alert-text">{{ error }}</span>
                </div>
            {% endif %}

            <form method="POST" action="/tigergym/connexion" class="auth-form">
                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input type="email" id="email" name="email" required 
                           placeholder="Votre adresse email">
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Mot de passe
                    </label>
                    <input type="password" id="password" name="password" required
                           placeholder="Votre mot de passe">
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-sign-in-alt"></i>
                    Se connecter
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}